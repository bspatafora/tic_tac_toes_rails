<table>
  <% [(0..2), (3..5), (6..8)].each do |row| %>
    <tr>
      <% row.each do |index| %>

        <td>
          <%= @board[index] == 'X' ? t(:X) : t(:O) if @board[index] %>
        </td>

      <% end %>
    </tr>
  <% end %>
</table>

<%= @message %>

<button>
  <%= link_to t(:play_again), root_path %>
</button>
