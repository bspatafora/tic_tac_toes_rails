<%= form_tag(start_game_path, method: "get") do %>

  <%= label_tag(:computer_type, t(:select_difficulty)) %>
    <%= radio_button_tag(:computer_type, "EASY_AI") %>
    <%= label_tag(:computer_type_easy, t(:easy)) %>
    <%= radio_button_tag(:computer_type, "MEDIUM_AI") %>
    <%= label_tag(:computer_type_medium, t(:medium)) %>
    <%= radio_button_tag(:computer_type, "HARD_AI") %>
    <%= label_tag(:computer_type_hard, t(:hard)) %>
    <br>

  <%= label_tag(:order, t(:select_order)) %>
    <%= radio_button_tag(:order, "first") %>
    <%= label_tag(:order_first, t(:first)) %>
    <%= radio_button_tag(:order, "second") %>
    <%= label_tag(:order_second, t(:second)) %>
    <br>

  <%= hidden_field_tag(:locale, I18n.locale) %>

  <%= submit_tag(t(:start_game)) %>

<% end %>
